<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>avatar</title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <form action="" method="post" encType="multipart/form-data">
      <div class="avatar">
        <div class="h2-add"><h2>Change Avatar</h2></div>
        <div class="mb-3">
          <div class="row">
            <div class="col-20">
              <label for="formGroupExampleInput" class="form-label">Avatar</label>
            </div>
            <div class="col-80">
              <input accept="image/*" class="form-control" type="file" id="imgInp" name="avatar" />
            </div>
          </div>

          <div class="mb-3">
            <div class="row">
              <div class="col-20">
                <label for="formGroupExampleInput" class="form-label">preview</label>
                <img  class="imgavatar" id="blah" src="<%= preAvatar ? `../images/${preAvatar}` : '../images/avatr.png' %>" alt="defaultAvatar" width="300px" height="300px" />
              
                <script>
                  imgInp.onchange = () => {
                    const [file] = imgInp.files;
                    if (file) {
                      blah.src = URL.createObjectURL(file);
                    }
                  };
                </script>
              </div>
            </div>
            <div class="bawah-add">
              <button type="submit" class="add-save"><img src="/images/ssve.png" /></button>&nbsp;
              <a class="add-reset" href="/todos"><img src="/images/rest.png" /></a>
            </div>
          </div>
        </div>
      </div>
    </form>
  </body>
</html>
